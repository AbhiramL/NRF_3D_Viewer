<Window x:Class="NRF_3D_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="http://helixToolkit.codeplex.com" 
        xmlns:helix="http://helix-toolkit.org/wpf"
        Title="Helicopter Visualizer" Height="450" Width="800">
    <Grid>
        <helix:HelixViewport3D x:Name="viewPort" ZoomExtentsWhenLoaded="True">
            <!-- Lighting -->
            <helix:SunLight/>
        </helix:HelixViewport3D>
        <Button x:Name="scanBtn" Content="SCAN" HorizontalAlignment="Left" Height="22" Margin="6,10,0,0" VerticalAlignment="Top" Width="79" Click="scanBtn_Click"/>
        <Button x:Name="ConnectBtn" Content="CONNECT" HorizontalAlignment="Left" Height="22" Margin="6,46,0,0" VerticalAlignment="Top" Width="79" Click="ConnectBtn_Click"/>
        <ComboBox x:Name="Device_ComboBox" HorizontalAlignment="Left" Height="22" Margin="99,10,0,0" VerticalAlignment="Top" Width="130" SelectionChanged="Device_ComboBox_SelectionChanged"/>
    </Grid>
</Window>
